<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Reporte simplificado de orden de compra con ICE -->
    <template id="report_purchaseorder_document_ice" inherit_id="purchase.report_purchaseorder_document">

        <!-- Agregar totales ICE en el resumen final -->
        <xpath expr="//div[@id='total']" position="inside">
            <t t-if="o.ice_total &gt; 0">
                <div class="row">
                    <div class="col-6">
                        <table class="table table-sm">
                            <tr t-if="o.ice_total_especifico &gt; 0">
                                <td><strong>Total ICE Espec√≠fico:</strong></td>
                                <td class="text-end">
                                    <span t-field="o.ice_total_especifico"
                                          t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                </td>
                            </tr>
                            <tr t-if="o.ice_total_porcentual &gt; 0">
                                <td><strong>Total ICE Porcentual:</strong></td>
                                <td class="text-end">
                                    <span t-field="o.ice_total_porcentual"
                                          t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                </td>
                            </tr>
                            <tr class="border-black">
                                <td><strong>Total ICE:</strong></td>
                                <td class="text-end">
                                    <span t-field="o.ice_total"
                                          t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                </td>
                            </tr>
                            <tr class="border-black">
                                <td><strong>Total con ICE:</strong></td>
                                <td class="text-end">
                                    <span t-field="o.amount_total_con_ice"
                                          t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                </td>
                            </tr>
                        </table>
                    </div>
                </div>
            </t>
        </xpath>

    </template>
</odoo>