<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vista de formulario de Factura de Proveedor con campos ICE -->
    <record id="view_move_form_ice" model="ir.ui.view">
        <field name="name">account.move.form.ice</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">

            <!-- Agregar columnas ICE después de price_subtotal en líneas de factura -->
            <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='tax_ids']" position="before">
                <field name="ice_litros"
                       optional="show"
                       column_invisible="parent.move_type not in ('in_invoice', 'in_refund')"
                       readonly="parent.state != 'draft'"/>
                <field name="ice_alicuota_especifica"
                       optional="hide"
                       column_invisible="parent.move_type not in ('in_invoice', 'in_refund')"
                       readonly="1"/>
                <field name="ice_alicuota_porcentual"
                       optional="hide"
                       column_invisible="parent.move_type not in ('in_invoice', 'in_refund')"
                       readonly="1"/>
                <field name="ice_monto_especifico"
                       optional="show"
                       column_invisible="parent.move_type not in ('in_invoice', 'in_refund')"
                       readonly="1"/>
                <field name="ice_monto_porcentual"
                       optional="show"
                       column_invisible="parent.move_type not in ('in_invoice', 'in_refund')"
                       readonly="1"/>
                <field name="ice_monto_total"
                       optional="show"
                       column_invisible="parent.move_type not in ('in_invoice', 'in_refund')"
                       readonly="1"
                       sum="Total ICE"/>
            </xpath>

            <!-- Agregar columna Subtotal + ICE después del subtotal -->
            <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='tax_ids']" position="after">
                <field name="price_subtotal_con_ice"
                       optional="show"
                       column_invisible="parent.move_type not in ('in_invoice', 'in_refund')"
                       sum="Subtotal + ICE"/>
            </xpath>

            <!-- Agregar totales ICE después del amount_total -->
            <xpath expr="//field[@name='amount_total']" position="after">
                <field name="ice_total_especifico"
                       widget="monetary"
                       readonly="1"
                       options="{'currency_field': 'currency_id'}"
                       invisible="move_type not in ('in_invoice', 'in_refund') or ice_total_especifico == 0"
                       string="Total ICE Específico"/>
                <field name="ice_total_porcentual"
                       widget="monetary"
                       readonly="1"
                       options="{'currency_field': 'currency_id'}"
                       invisible="move_type not in ('in_invoice', 'in_refund') or ice_total_porcentual == 0"
                       string="Total ICE Porcentual"/>
                <field name="ice_total"
                       widget="monetary"
                       readonly="1"
                       options="{'currency_field': 'currency_id'}"
                       invisible="move_type not in ('in_invoice', 'in_refund') or ice_total == 0"
                       string="Total ICE"
                       class="oe_subtotal_footer_separator"/>
                <field name="amount_total_con_ice"
                       widget="monetary"
                       readonly="1"
                       options="{'currency_field': 'currency_id'}"
                       invisible="move_type not in ('in_invoice', 'in_refund') or ice_total == 0"
                       string="Total con ICE"
                       class="oe_subtotal_footer_separator"/>
            </xpath>

        </field>
    </record>

</odoo>