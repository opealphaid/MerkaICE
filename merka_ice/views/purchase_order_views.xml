<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vista de formulario de Orden de Compra con campos ICE -->
    <record id="purchase_order_form_view_ice" model="ir.ui.view">
        <field name="name">purchase.order.form.ice</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">

            <!-- ============================================ -->
            <!-- AGREGAR COLUMNAS ICE EN LA VISTA TREE/LIST   -->
            <!-- ============================================ -->
            <xpath expr="//field[@name='order_line']/list/field[@name='price_unit']" position="after">
                <field name="ice_litros"
                       optional="show"
                       string="Litros"/>
                <field name="ice_alicuota_especifica"
                       optional="hide"
                       string="Alíc. Esp. (Bs/L)"/>
                <field name="ice_alicuota_porcentual"
                       optional="hide"
                       string="Alíc. % (%)"/>
                <field name="ice_monto_especifico"
                       optional="show"
                       readonly="1"
                       string="ICE Específico"
                       widget="monetary"/>
                <field name="ice_monto_porcentual"
                       optional="show"
                       readonly="1"
                       string="ICE Porcentual"
                       widget="monetary"/>
                <field name="ice_monto_total"
                       optional="show"
                       readonly="1"
                       string="ICE Total"
                       sum="Total ICE"
                       widget="monetary"/>
            </xpath>

            <!-- ============================================ -->
            <!-- AGREGAR CAMPOS ICE EN LA VISTA FORM          -->
            <!-- ============================================ -->
            <xpath expr="//field[@name='order_line']/form//field[@name='price_unit']" position="after">
                <field name="ice_litros" string="Litros Totales"/>
                <field name="ice_alicuota_especifica" string="Alícuota Específica (Bs/Litro)"/>
                <field name="ice_alicuota_porcentual" string="Alícuota Porcentual (%)"/>
            </xpath>

            <xpath expr="//field[@name='order_line']/form//field[@name='discount']" position="after">
                <field name="ice_monto_especifico" readonly="1" string="ICE Específico"/>
                <field name="ice_monto_porcentual" readonly="1" string="ICE Porcentual"/>
                <field name="ice_monto_total" readonly="1" string="Total ICE"/>
            </xpath>

            <!-- ============================================ -->
            <!-- AGREGAR TOTALES ICE EN EL FOOTER             -->
            <!-- ============================================ -->
            <xpath expr="//field[@name='tax_totals']" position="after">
                <field name="ice_total_especifico"
                       widget="monetary"
                       readonly="1"
                       string="Total ICE Específico"
                       invisible="ice_total_especifico == 0"
                       options="{'currency_field': 'currency_id'}"/>
                <field name="ice_total_porcentual"
                       widget="monetary"
                       readonly="1"
                       string="Total ICE Porcentual"
                       invisible="ice_total_porcentual == 0"
                       options="{'currency_field': 'currency_id'}"/>
                <field name="ice_total"
                       widget="monetary"
                       readonly="1"
                       string="Total ICE"
                       invisible="ice_total == 0"
                       options="{'currency_field': 'currency_id'}"/>
            </xpath>

            <!-- ============================================ -->
            <!-- PÁGINA ADICIONAL CON DETALLE DE ICE          -->
            <!-- ============================================ -->
            <xpath expr="//page[@name='purchase_delivery_invoice']" position="after">
                <page string="Detalle ICE" name="ice_details_page" invisible="ice_total == 0">
                    <group>
                        <group string="Resumen de ICE">
                            <field name="ice_total_especifico"
                                   widget="monetary"
                                   readonly="1"
                                   string="ICE Específico Total"
                                   options="{'currency_field': 'currency_id'}"/>
                            <field name="ice_total_porcentual"
                                   widget="monetary"
                                   readonly="1"
                                   string="ICE Porcentual Total"
                                   options="{'currency_field': 'currency_id'}"/>
                            <field name="ice_total"
                                   widget="monetary"
                                   readonly="1"
                                   string="ICE Total"
                                   options="{'currency_field': 'currency_id'}"/>
                        </group>
                        <group string="Composición del Total de la Orden">
                            <field name="amount_untaxed"
                                   widget="monetary"
                                   readonly="1"
                                   string="Subtotal (sin impuestos)"
                                   options="{'currency_field': 'currency_id'}"/>
                            <field name="ice_total"
                                   widget="monetary"
                                   readonly="1"
                                   string="+ ICE Total"
                                   options="{'currency_field': 'currency_id'}"/>
                            <field name="amount_tax"
                                   widget="monetary"
                                   readonly="1"
                                   string="+ Impuestos (IVA, etc.)"
                                   options="{'currency_field': 'currency_id'}"/>
                            <field name="amount_total"
                                   widget="monetary"
                                   readonly="1"
                                   string="= TOTAL FINAL"
                                   options="{'currency_field': 'currency_id'}"
                                   class="oe_subtotal_footer_separator"/>
                        </group>
                    </group>
                    <separator/>
                    <group>
                        <div class="alert alert-info" role="alert">
                            <h4><i class="fa fa-info-circle"/> Información sobre el ICE</h4>
                            <p><strong>Fórmula del Total:</strong></p>
                            <p class="mb-2">
                                <code>Total Final = Subtotal + ICE Total + Impuestos</code>
                            </p>

                            <p><strong>Cálculo del ICE por Línea:</strong></p>
                            <ul>
                                <li><strong>ICE Específico:</strong> Litros × Alícuota Específica (Bs/Litro)</li>
                                <li><strong>ICE Porcentual:</strong> (Precio Unitario × Cantidad) × (Alícuota % / 100)</li>
                                <li><strong>ICE Total por Línea:</strong> ICE Específico + ICE Porcentual</li>
                            </ul>

                            <p class="mb-0"><strong>Nota:</strong> Las alícuotas se configuran en cada producto desde la pestaña "Alícuotas ICE".</p>
                        </div>
                    </group>
                </page>
            </xpath>

        </field>
    </record>

</odoo>