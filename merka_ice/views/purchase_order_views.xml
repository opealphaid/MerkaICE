<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vista de formulario de Orden de Compra con campos ICE -->
    <record id="purchase_order_form_view_ice" model="ir.ui.view">
        <field name="name">purchase.order.form.ice</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">

            <!-- Agregar columnas ICE en las líneas de orden - después de price_unit -->
            <xpath expr="//field[@name='order_line']//field[@name='price_unit']" position="after">
                <field name="ice_litros"
                       optional="show"
                       readonly="state in ('purchase', 'done', 'cancel')"/>
                <field name="ice_alicuota_especifica"
                       optional="hide"
                       readonly="1"/>
                <field name="ice_alicuota_porcentual"
                       optional="hide"
                       readonly="1"/>
                <field name="ice_monto_especifico"
                       optional="show"
                       readonly="1"/>
                <field name="ice_monto_porcentual"
                       optional="show"
                       readonly="1"/>
                <field name="ice_monto_total"
                       optional="show"
                       readonly="1"
                       sum="Total ICE"/>
            </xpath>

            <!-- Modificar subtotal para incluir ICE -->
            <xpath expr="//field[@name='order_line']//field[@name='price_subtotal']" position="after">
                <field name="price_subtotal_con_ice"
                       optional="show"
                       sum="Subtotal + ICE"/>
            </xpath>

            <!-- Agregar una nueva página/sección para totales ICE -->
            <xpath expr="//page[@name='purchase_delivery_invoice']" position="after">
                <page string="Totales ICE" name="ice_totals_page" invisible="ice_total == 0">
                    <group>
                        <group string="Resumen ICE">
                            <field name="ice_total_especifico"
                                   widget="monetary"
                                   readonly="1"
                                   options="{'currency_field': 'currency_id'}"/>
                            <field name="ice_total_porcentual"
                                   widget="monetary"
                                   readonly="1"
                                   options="{'currency_field': 'currency_id'}"/>
                            <field name="ice_total"
                                   widget="monetary"
                                   readonly="1"
                                   options="{'currency_field': 'currency_id'}"/>
                            <field name="amount_total_con_ice"
                                   widget="monetary"
                                   readonly="1"
                                   options="{'currency_field': 'currency_id'}"/>
                        </group>
                    </group>
                    <group>
                        <div class="alert alert-info" role="alert">
                            <strong>Nota:</strong> El total con ICE incluye el monto total de la orden
                            más el ICE específico y porcentual calculado en las líneas.
                        </div>
                    </group>
                </page>
            </xpath>

        </field>
    </record>

</odoo>