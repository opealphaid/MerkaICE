<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vista de formulario de producto con campos ICE -->
    <record id="product_template_form_view_ice" model="ir.ui.view">
        <field name="name">product.template.form.ice</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <!-- Agregar página de ICE después de la página de Ventas -->
            <xpath expr="//notebook" position="inside">
                <page string="Alícuotas ICE" name="ice_alicuotas">
                    <group>
                        <group string="Información de Volumen">
                            <label for="ice_volumen_por_unidad" string="Volumen por Unidad"/>
                            <div class="o_row">
                                <field name="ice_volumen_por_unidad" class="oe_inline"/>
                                <field name="ice_uom_volumen" class="oe_inline" nolabel="1"/>
                            </div>
                            <div class="text-muted" colspan="2">
                                Volumen que contiene UNA unidad del producto.<br/>
                                <strong>Ejemplos:</strong><br/>
                                • Botella 1.5L → 1.5 Litros (L)<br/>
                                • Lata 355mL → 355 Mililitros (mL)<br/>
                                • Botella 750mL → 750 Mililitros (mL)
                            </div>
                        </group>
                        <group>
                            <field name="ice_aplica_alicuota" readonly="1"/>
                        </group>
                    </group>
                    <group>
                        <group string="Alícuota Específica">
                            <field name="ice_alicuota_especifica"/>
                            <div class="text-muted" colspan="2">
                                Monto fijo en Bs por cada LITRO.<br/>
                                <strong>Ejemplo:</strong> 0.51 significa 0.51 Bs por cada litro
                            </div>
                        </group>
                        <group string="Alícuota Porcentual">
                            <field name="ice_alicuota_porcentual"/>
                            <div class="text-muted" colspan="2">
                                Porcentaje aplicado sobre el precio.<br/>
                                <strong>Ejemplo:</strong> 1 significa 1%
                            </div>
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>

    <!-- Vista de árbol de productos con indicador ICE -->
    <record id="product_template_tree_view_ice" model="ir.ui.view">
        <field name="name">product.template.tree.ice</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_tree_view"/>
        <field name="arch" type="xml">
            <!-- Agregar campos después de la columna de precio de lista -->
            <xpath expr="//field[@name='list_price']" position="after">
                <field name="ice_volumen_por_unidad" optional="hide" string="Volumen"/>
                <field name="ice_uom_volumen" optional="hide" string="UdM Vol."/>
                <field name="ice_aplica_alicuota" optional="show" string="Aplica ICE"/>
                <field name="ice_alicuota_especifica" optional="hide" string="Alíc. Esp. (Bs/L)"/>
                <field name="ice_alicuota_porcentual" optional="hide" string="Alíc. % (%)"/>
            </xpath>
        </field>
    </record>
</odoo>