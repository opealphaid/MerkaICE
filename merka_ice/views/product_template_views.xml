<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vista de formulario de producto con campos ICE -->
    <record id="product_template_form_view_ice" model="ir.ui.view">
        <field name="name">product.template.form.ice</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">

            <!-- Agregar campos de volumen en la página de Compras -->
            <xpath expr="//page[@name='purchase']" position="inside">
                <group string="Información de Volumen para ICE">
                    <group>
                        <label for="ice_volumen_por_unidad" string="Volumen por Unidad"/>
                        <div class="o_row">
                            <field name="ice_volumen_por_unidad" class="oe_inline"/>
                            <field name="ice_uom_volumen" class="oe_inline" nolabel="1"/>
                        </div>
                        <div class="text-muted" colspan="2">
                            <strong>Ejemplos:</strong><br/>
                            • Botella 2L → 2 Litros (L)<br/>
                            • Lata 355mL → 355 Mililitros (mL)<br/>
                            • Botella 750mL → 750 Mililitros (mL)
                        </div>
                    </group>
                    <group>
                        <field name="ice_aplica" readonly="1"/>
                        <div class="alert alert-info" colspan="2" invisible="not ice_aplica">
                            <i class="fa fa-info-circle"/> Este producto tiene impuestos ICE configurados.
                        </div>
                    </group>
                </group>
            </xpath>

            <!-- Agregar ayuda contextual en el campo de impuestos de compra -->
            <xpath expr="//field[@name='supplier_taxes_id']" position="after">
                <div class="alert alert-warning" colspan="2" invisible="ice_volumen_por_unidad == 0 or ice_aplica">
                    <i class="fa fa-exclamation-triangle"/>
                    <strong>Recordatorio:</strong> Este producto tiene volumen configurado pero no tiene impuestos ICE asignados.
                    <br/>Agrega los impuestos ICE correspondientes desde el campo "Impuestos de Proveedor" arriba.
                </div>
            </xpath>
        </field>
    </record>

    <!-- Vista de árbol de productos con indicador ICE -->
    <record id="product_template_tree_view_ice" model="ir.ui.view">
        <field name="name">product.template.tree.ice</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_tree_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='list_price']" position="after">
                <field name="ice_volumen_por_unidad" optional="hide" string="Volumen"/>
                <field name="ice_uom_volumen" optional="hide" string="UdM Vol."/>
                <field name="ice_aplica" optional="show" string="Tiene ICE"/>
            </xpath>
        </field>
    </record>
</odoo>