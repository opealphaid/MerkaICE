<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vista de formulario de producto con campos ICE -->
    <record id="product_template_form_view_ice" model="ir.ui.view">
        <field name="name">product.template.form.ice</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <!-- Agregar página de ICE después de la página de Ventas -->
            <xpath expr="//notebook" position="inside">
                <page string="Alícuotas ICE" name="ice_alicuotas">
                    <group>
                        <group string="Alícuota Específica">
                            <field name="ice_alicuota_especifica"
                                   widget="monetary"
                                   options="{'currency_field': 'currency_id'}"/>
                            <div class="text-muted" colspan="2">
                                Monto fijo en Bs por cada litro vendido.<br/>
                                <strong>Ejemplo:</strong> Si configuras 0.51 Bs/litro y vendes 10 litros,
                                el ICE será 5.10 Bs (10 × 0.51)
                            </div>
                        </group>
                        <group string="Alícuota Porcentual">
                            <field name="ice_alicuota_porcentual"/>
                            <div class="text-muted" colspan="2">
                                Porcentaje aplicado sobre el precio de venta.<br/>
                                <strong>Ejemplo:</strong> Si configuras 1% y el precio es 100 Bs,
                                el ICE será 1 Bs (100 × 1%)
                            </div>
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="ice_aplica_alicuota" readonly="1"/>
                        </group>
                    </group>
                    <div class="alert alert-info" role="alert" style="margin: 16px;">
                        <strong>Nota:</strong> Puedes configurar ambas alícuotas simultáneamente.
                        El ICE total será la suma de ambos cálculos.
                    </div>
                </page>
            </xpath>
        </field>
    </record>

    <!-- Vista de árbol de productos con indicador ICE -->
    <record id="product_template_tree_view_ice" model="ir.ui.view">
        <field name="name">product.template.tree.ice</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_tree_view"/>
        <field name="arch" type="xml">
            <!-- Agregar campos después de la columna de precio de lista -->
            <xpath expr="//field[@name='list_price']" position="after">
                <field name="ice_aplica_alicuota" optional="show" string="Aplica ICE"/>
                <field name="ice_alicuota_especifica" optional="hide" string="Alíc. Esp. (Bs/L)"/>
                <field name="ice_alicuota_porcentual" optional="hide" string="Alíc. % (%)"/>
            </xpath>
        </field>
    </record>
</odoo>